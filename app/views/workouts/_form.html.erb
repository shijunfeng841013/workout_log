<%= simple_form_for(@workout, html: {class: "form-horizontal"}) do |f| %>
  <%= f.input :date, label: "Date", input_html: {class: "from-control"}%>
  <%= f.input :workout, label: "What area did you workout?", input_html: {class: "from-control"}%>
  <%= f.input :mood, label: "How are you feeling?", input_html: {class: "from-control"}%>
  <%= f.input :length, label: "How long was the workout?", input_html: {class: "from-control"}%>
  <br>
  <%= f.button :submit %>
<% end %>
